{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "no-console": "off",
    "node/no-deprecated-api": "warn",
    "node/no-unsupported-features/es-syntax": "off",
    "no-unused-vars": "warn",
    "node/no-unpublished-import" : "warn",
    "require-atomic-updates": 1
  },
  "plugins": [
    "jest",
    "node"
  ]
}